{
  "name": "@meeg/meeg-blog",
  "version": "0.0.1",
  "private": true,
  "description": "Chris Meagher's blog",
  "author": "Chris Meagher",
  "license": "MIT",
  "scripts": {
    "astro": "astro",
    "build": "pnpm check:ts && astro build",
    "check:astro": "astro check",
    "check:ts": "tsc --noEmit",
    "dev": "astro dev",
    "format": "prettier -w --plugin-search-dir=. .",
    "gen:types": "ts-node \"src/features/storyblok/gen/types.ts\"",
    "lint": "pnpm lint:js & pnpm lint:css",
    "lint:css": "npx stylelint \"**/*.{css,scss}\" --aei",
    "lint:js": "eslint --ext .js,.ts,.astro src",
    "mkcert:local": "mkcert -install && mkcert localhost",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "dependencies": {
    "@storyblok/js": "^1.8.6",
    "axios": "^0.27.2",
    "change-case": "^4.1.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.8.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "astro": "^1.5.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-astro": "^0.20.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^10.1.0",
    "pkg-dir": "^7.0.0",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.5.5",
    "storyblok": "^3.12.0",
    "storyblok-generate-ts": "^1.7.0",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
